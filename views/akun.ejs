<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Akun - Toko Top-Up Game</title>
    <link rel="stylesheet" href="akun.css" />
  </head>
  <body>
    <header class="navbar">
      <div class="logo-container">
        <a href="/">
          <div class="navbar-logo">
            <img
              src="https://static.vecteezy.com/system/resources/thumbnails/032/836/024/small_2x/english-alphabet-s-with-a-crown-royal-king-queen-luxury-symbol-font-emblem-illustration-vector.jpg"
              alt="Logo"
            />
          </div>
          <h1 class="navbar-title">SLIF4</h1>
        </a>
      </div>
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/profil">Profil</a></li>
          <li><a href="/cek-transaksi">Cek Transaksi</a></li>
          <li>
            <% if (userId) { %>
            <a href="/logout">Log Out</a>
            <% } else { %>
            <a href="/akun">Masuk/Daftar</a>
            <% } %>
          </li>
        </ul>
      </nav>
    </header>
    <main>
      <h2>Masuk/Daftar</h2>
      <!-- Form Login -->
      <form id="login-form" action="/akun" method="POST">
        <h3>Login</h3>
        <input
          type="text"
          name="login"
          placeholder="Email atau Nama"
          required
        />
        <input
          type="password"
          name="password"
          placeholder="Password"
          required
        />
        <button type="submit">Masuk</button>
        <p>
          Belum punya akun?
          <a href="#" onclick="toggleForms()">Daftar di sini</a>
        </p>
      </form>

      <!-- Form Pendaftaran -->
      <form
        id="register-form"
        action="/register"
        method="POST"
        style="display: none"
      >
        <h3>Daftar</h3>
        <input type="text" name="nama" placeholder="Nama" required />
        <input type="email" name="email" placeholder="Email" required />
        <input
          type="password"
          name="password"
          placeholder="Password"
          required
        />
        <input
          type="text"
          name="username_game"
          placeholder="Username Game"
          required
        />

        <button type="submit">Daftar</button>
        <p>
          Sudah punya akun?
          <a href="#" onclick="toggleForms()">Masuk di sini</a>
        </p>
      </form>
    </main>
    <footer>
      <p>&copy; 2024 SLIF4 Store. All rights reserved.</p>
    </footer>

    <script>
      function toggleForms() {
        const loginForm = document.getElementById("login-form");
        const registerForm = document.getElementById("register-form");
        if (loginForm.style.display === "none") {
          loginForm.style.display = "block";
          registerForm.style.display = "none";
        } else {
          loginForm.style.display = "none";
          registerForm.style.display = "block";
        }
      }

      // Menyembunyikan form pendaftaran secara default
      document.getElementById("register-form").style.display = "none";
    </script>
  </body>
</html>
